    <script>
        const moduleData = [
            {
                id: 'forecast',
                name: 'Forecast',
                tiles: ['Forecasted Sales', 'Actual Sales']
            },
            {
                id: 'food',
                name: 'Food Management',
                tiles: ['Act Icos %']
            },
            {
                id: 'labor',
                name: 'Labor Management',
                tiles: ['Labor %', 'OT Hours', 'Ideal Hours', 'Var (Act vs Ideal)']
            },
            {
                id: 'payroll',
                name: 'Payroll Management',
                tiles: ['Labor $', 'Misc Pay $', 'Time Loss $']
            }
        ];

        function formatKey(name) {
            return name.replace(/\s+/g, '_').replace(/[()%$]/g, '').replace(/__+/g, '_').replace(/^_|_$/g, '');
        }

        function showConfig() {
            document.getElementById('landing-view').classList.remove('active');
            document.getElementById('config-view').classList.add('active');
            document.getElementById('save-btn-container').style.display = 'block';
            renderConfiguration();
        }

        function showLanding() {
            document.getElementById('config-view').classList.remove('active');
            document.getElementById('landing-view').classList.add('active');
            document.getElementById('save-btn-container').style.display = 'none';
        }

        function renderConfiguration() {
            const tbody = document.getElementById('config-table-body');
            tbody.innerHTML = '';
            
            let currentOrder = 1;

            moduleData.forEach(mod => {
                // Group Header
                const groupRow = document.createElement('tr');
                groupRow.innerHTML = `<td colspan="4" class="module-divider">${mod.name.toUpperCase()}</td>`;
                tbody.appendChild(groupRow);

                // Group Keys (to be shared in all dropdowns for this group)
                const groupKeys = mod.tiles.map(t => formatKey(t));

                mod.tiles.forEach(tileName => {
                    const tr = document.createElement('tr');
                    tr.className = `row-${mod.id}`;
                    
                    const currentKey = formatKey(tileName);

                    tr.innerHTML = `
                        <td style="text-align: center;">
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider"></span>
                            </label>
                        </td>
                        <td>
                            <input type="text" class="input-field" value="${currentKey}" readonly style="background:#f8fafc; cursor:not-allowed;">
                        </td>
                        <td>
                            <input type="text" class="input-field" value="${tileName}">
                        </td>
                        <td style="text-align: center;">
                            <input type="number" class="input-field" value="${currentOrder++}" style="text-align: center;">
                        </td>
                    `;
                    tbody.appendChild(tr);
                });
            });
        }

        function handleSave() {
            // Simple visual feedback
            const btn = document.querySelector('.btn-save');
            const originalText = btn.innerText;
            btn.innerText = 'Saving...';
            btn.style.opacity = '0.7';
            
            setTimeout(() => {
                btn.innerText = 'Saved!';
                btn.style.background = '#059669';
                
                setTimeout(() => {
                    btn.innerText = originalText;
                    btn.style.background = 'var(--accent-green)';
                    btn.style.opacity = '1';
                    showLanding();
                }, 1000);
            }, 800);
        }
    </script>
</body>
